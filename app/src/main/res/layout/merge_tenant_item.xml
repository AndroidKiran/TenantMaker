<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/tenant_avatar"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/dimen_16"
        app:srcCompat="@drawable/ic_person_add_white"
        tools:srcCompat="@drawable/ic_person_add_white"/>

    <LinearLayout
        android:id="@+id/tenantDetailsLayour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/tenant_avatar">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tenant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="sds"
            android:paddingBottom="@dimen/dimen_5"
            android:paddingTop="@dimen/dimen_5"
            android:textSize="@dimen/font_16"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tenant_room_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_5"
            tools:text="45"
            android:textSize="@dimen/font_16"/>

    </LinearLayout>


</merge>