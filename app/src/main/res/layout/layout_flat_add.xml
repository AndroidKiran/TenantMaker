<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.easy.make.tenantmaker.base.component.text.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_16"
        android:paddingTop="@dimen/dimen_10"
        android:text="@string/str_basic_details"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/font_16"
        app:fontTypeface="museosans700" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_10">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/flat_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            app:theme="@style/AppTheme.TextInputLayout">

            <com.easy.make.tenantmaker.base.component.text.EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/str_name"
                android:inputType="textPersonName"
                android:maxLength="40"
                android:textSize="@dimen/font_16"
                app:fontTypeface="museosans500" />
        </android.support.design.widget.TextInputLayout>

        <com.easy.make.tenantmaker.base.component.text.TextView
            android:id="@+id/err_flat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingRight="@dimen/dimen_16"
            android:text="@string/err_name"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/font_12"
            android:visibility="gone"
            app:fontTypeface="museosans500"
            tools:visibility="visible"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/street_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            app:theme="@style/AppTheme.TextInputLayout">

            <com.easy.make.tenantmaker.base.component.text.EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/str_street_address"
                android:inputType="text|textMultiLine"
                android:lines="3"
                android:maxLength="120"
                android:maxLines="3"
                android:textSize="@dimen/font_16"
                app:fontTypeface="museosans500" />
        </android.support.design.widget.TextInputLayout>

        <com.easy.make.tenantmaker.base.component.text.TextView
            android:id="@+id/err_street_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingRight="@dimen/dimen_16"
            android:text="@string/err_street_address"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/font_12"
            android:visibility="gone"
            app:fontTypeface="museosans500"
            tools:visibility="visible"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            app:theme="@style/AppTheme.TextInputLayout">

            <com.easy.make.tenantmaker.base.component.text.EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/str_city"
                android:inputType="text|textMultiLine"
                android:lines="1"
                android:maxLines="1"
                android:textSize="@dimen/font_16"
                app:fontTypeface="museosans500" />
        </android.support.design.widget.TextInputLayout>


        <com.easy.make.tenantmaker.base.component.text.TextView
            android:id="@+id/err_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingRight="@dimen/dimen_16"
            android:text="@string/err_city"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/font_12"
            android:visibility="gone"
            app:fontTypeface="museosans500"
            tools:visibility="visible"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            app:theme="@style/AppTheme.TextInputLayout">

            <com.easy.make.tenantmaker.base.component.text.EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/str_pin_code"
                android:inputType="text|textMultiLine"
                android:lines="1"
                android:maxLines="1"
                android:textSize="@dimen/font_16"
                app:fontTypeface="museosans500" />
        </android.support.design.widget.TextInputLayout>


        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/country_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_5"
            app:ms_alignLabels="true"
            app:ms_arrowColor="@android:color/darker_gray"
            app:ms_arrowSize="@dimen/dimen_16"
            app:ms_baseColor="@android:color/darker_gray"
            app:ms_enableFloatingLabel="true"
            app:ms_floatingLabelColor="@android:color/darker_gray"
            app:ms_floatingLabelText="@string/str_pg_details"
            app:ms_highlightColor="@color/material_login_background"
            app:ms_hint="@string/str_pg_details"
            app:ms_hintColor="@android:color/darker_gray"
            app:ms_multiline="false"
            app:ms_thickness="@dimen/dimen_0.5" />


        <com.easy.make.tenantmaker.base.component.text.TextView
            android:id="@+id/err_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingRight="@dimen/dimen_16"
            android:text="@string/err_country"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/font_12"
            android:visibility="gone"
            app:fontTypeface="museosans500"
            tools:visibility="visible"/>

    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/save_flat_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dimen_16"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:background="@drawable/selector_green"
        android:gravity="center"
        android:minHeight="@dimen/dimen_48"
        android:text="@string/str_save"
        android:textColor="@color/material_login_login_color"
        android:textSize="@dimen/font_16" />


</LinearLayout>